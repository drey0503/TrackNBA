<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".CompareTeamsActivity"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Team Comparison"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#17408B"
        android:textColorHint="#3F51B5"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/team_et"
            android:layout_width="150dp"
            android:layout_height="59dp"
            android:layout_marginHorizontal="12dp"
            android:completionThreshold="1"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColorHint="@color/black"
            android:ems="10"
            android:hint="Enter Team 1 Name"
            android:textSize="13sp"
            android:textColor="@color/black" />

        <AutoCompleteTextView
            android:id="@+id/team_et_2"
            android:layout_width="150dp"
            android:layout_height="59dp"
            android:selectAllOnFocus="false"
            android:completionThreshold="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColorHint="@color/black"
            android:ems="10"
            android:hint="Enter Team 2 Name"
            android:textSize="13sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_fet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="25dp"
        android:backgroundTint="#17408B"
        android:text="Compare Teams"
        android:textColor="@color/white" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="84dp"
                android:layout_height="86dp"
                android:background="@color/white"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/results"
                android:layout_width="268dp"
                android:layout_marginLeft="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="17sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="84dp"
                android:layout_height="86dp"
                android:background="@color/white"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/results_2"
                android:layout_width="268dp"
                android:layout_marginLeft="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="17sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>