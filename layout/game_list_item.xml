<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="378dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/awayTeamImageView"
                android:layout_width="62dp"
                android:layout_height="45dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="312dp"
                android:layout_marginBottom="66dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/homeTeamImageView"
                android:layout_width="62dp"
                android:layout_height="45dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="63dp"
                android:layout_marginEnd="312dp"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/awayTeamNameTextView"
                android:layout_width="105dp"
                android:layout_height="22dp"
                android:layout_marginStart="76dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="209dp"
                android:layout_marginBottom="89dp"
                android:background="@color/white"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/homeTeamNameTextView"
                android:layout_width="105dp"
                android:layout_height="22dp"
                android:layout_marginStart="76dp"
                android:layout_marginTop="63dp"
                android:layout_marginEnd="209dp"
                android:layout_marginBottom="35dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/awayTeamRecordTextView"
                android:layout_width="105dp"
                android:layout_height="20dp"
                android:layout_marginStart="71dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="199dp"
                android:layout_marginBottom="64dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/homeTeamRecordTextView"
                android:layout_width="105dp"
                android:layout_height="20dp"
                android:layout_marginStart="69dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="199dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/quartersTextView"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:layout_marginStart="181dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="67dp"
                android:layout_marginBottom="91dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/awayScoreLineTextView"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:layout_marginStart="181dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="67dp"
                android:layout_marginBottom="62dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/homeScoreLineTextView"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:layout_marginStart="181dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="67dp"
                android:layout_marginBottom="35dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/finalTextView"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginStart="313dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="91dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:background="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/awayTeamFinalTextView"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="313dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="62dp"
                android:textAlignment="center"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/homeTeamFinalTextView"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="313dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="35dp"
                android:textAlignment="center"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>