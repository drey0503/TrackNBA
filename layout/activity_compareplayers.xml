<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ComparePlayersActivity"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Player Comparison"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#3F51B5"
        android:textColorHint="#3F51B5"
        android:textSize="45sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/player_1_et"
            android:layout_width="150dp"
            android:layout_height="59dp"
            android:layout_marginHorizontal="10dp"
            android:completionThreshold="1"
            android:ems="10"
            android:textSize="13sp"
            android:textAlignment="center"
            android:hint="Enter P1's name"
            android:singleLine="true"
            android:textColorHint="@color/black"
            android:textColor="#3F51B5" />

        <AutoCompleteTextView
            android:id="@+id/player_2_et"
            android:layout_width="150dp"
            android:layout_height="59dp"
            android:layout_marginHorizontal="50dp"
            android:completionThreshold="1"
            android:ems="10"
            android:textSize="13sp"
            android:textAlignment="center"
            android:hint="Enter P2's name"
            android:singleLine="true"
            android:textColorHint="@color/black"
            android:textColor="#3F51B5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:textColor="#FFFFFF">



    </LinearLayout>

<!--Games-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/random"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginStart="110dp"
            android:ems="10"
            android:textColor="#3F51B5"
            android:textSize="13.00sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginStart="0dp"
            android:ems="10"
            android:text="Games Played"
            android:textSize="13.00sp"
            android:textAlignment="center"
            android:textColor="#3F51B5"/>
        <TextView
            android:id="@+id/p2_games"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:ems="10"
            android:textSize="13.00sp"
            android:textColor="#3F51B5"/>

    </LinearLayout>

<!--    Points-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/p1_ppg"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginStart="110dp"
            android:ems="10"
            android:textColor="#3F51B5"
            android:textSize="13.00sp"  />

        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginStart="0dp"
            android:ems="10"
            android:text="Points"
            android:textSize="13.00sp"
            android:textAlignment="center"
            android:textColor="#3F51B5"/>
        <TextView
            android:id="@+id/p2_ppg"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:ems="10"
            android:textSize="13.00sp"
            android:textColor="#3F51B5"/>

    </LinearLayout>

<!--    Rebounds-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/p1_rpg"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginStart="110dp"
            android:ems="10"
            android:textColor="#3F51B5"
            android:textSize="13.00sp"  />

        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginStart="0dp"
            android:ems="10"
            android:text="Rebounds"
            android:textSize="13.00sp"
            android:textAlignment="center"
            android:textColor="#3F51B5"/>
        <TextView
            android:id="@+id/p2_rpg"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:ems="10"
            android:textSize="13.00sp"
            android:textColor="#3F51B5"/>

    </LinearLayout>

<!--Assists-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/p1_apg"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginStart="110dp"
            android:ems="10"
            android:textColor="#3F51B5"
            android:textSize="13.00sp"  />

        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginStart="0dp"
            android:ems="10"
            android:text="Assists"
            android:textSize="13.00sp"
            android:textAlignment="center"
            android:textColor="#3F51B5"/>
        <TextView
            android:id="@+id/p2_apg"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:ems="10"
            android:textSize="13.00sp"
            android:textColor="#3F51B5"/>
    </LinearLayout>

<!--    Blocks-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/p1_bpg"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginStart="110dp"
            android:ems="10"
            android:textColor="#3F51B5"
            android:textSize="13.00sp"  />

        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginStart="0dp"
            android:ems="10"
            android:text="Blocks"
            android:textSize="13.00sp"
            android:textAlignment="center"
            android:textColor="#3F51B5"/>
        <TextView
            android:id="@+id/p2_bpg"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:ems="10"
            android:textSize="13.00sp"
            android:textColor="#3F51B5"/>

    </LinearLayout>

<!--    Steals-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/p1_spg"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginStart="110dp"
            android:ems="10"
            android:textColor="#3F51B5"
            android:textSize="13.00sp"  />

        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginStart="0dp"
            android:ems="10"
            android:text="Steals"
            android:textSize="13.00sp"
            android:textAlignment="center"
            android:textColor="#3F51B5"/>
        <TextView
            android:id="@+id/p2_spg"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:ems="10"
            android:textSize="13.00sp"
            android:textColor="#3F51B5"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_compare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:text="Compare Players"
        android:textSize="12sp"
        app:rippleColor="#BBDEFB" />


</LinearLayout>